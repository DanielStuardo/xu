name: teclado ascii

vars:
  p:=$1:string
  c:=number
  n,m:=^number
/* un programa de teclas */

algorithm:

  write "PARAMETRO INGRESADO=",p,"\n"

  do
     c<-0  // adora
     readkey(c), while c=0
     write "KEY  = ", c, " - ",chr(c),"\n"
  until c=27

